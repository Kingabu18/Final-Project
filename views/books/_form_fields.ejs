<div>
  <label>Type of Plan</label>
  <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
  <label>Member</label>
  <select name="author">
  <% authors.forEach(author => { %>
    <% if (author.id === book.author) { %>
      <option selected label="<%= author.name %>" value="<%= author.id %>">
    <% } else { %>
      <option label="<%= author.name %>" value="<%= author.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
<div>
  <label>Registered Date</label>
  <input type="date" name="publishDate"
        value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
  <label>Plan End</label>
  <input type="date" name="pageCount" 
        value="<%= book.pageCount == null ? '' : book.pageCount.toISOString().split('T')[0] %>">
</div>
</div>
<div>
  <label>Profile Picture</label>
  <input type="file" name="cover" class="filepond">
</div>
<div>
  <label>Payment</label>
  <input type="number" name="decription" min="1" value="<%= book.description %>">
</div>